{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1> Showing blog post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
                <th>title</th>
                <td>{{ blog.title }}</td>
                <th>Content</th>
                <td>{{ blog.content }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        {{ include('comment/index.html.twig', {'button_label': 'Update'}) }}
    </div>

    <div>
        {{ include('comment/_form.html.twig', {'button_label': 'Update'}) }}
    </div>

    <a href="{{ path('blog_index') }}">back to list</a>


    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>
        {{ include('blog/_delete_form.html.twig') }}
    {% elseif is_granted('ROLE_USER') %}

    {% else %}

    {% endif %}






{% endblock %}
